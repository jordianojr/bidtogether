<%- include('partials/header') %>

<div style="padding-left: 40px; padding-top: 40px;">
  <a href="/">
    <i class="fas fa-users fa-4x"> <p style="font-family: 'Space Grotesk'"> bid together </p></i>
  </a>
</div>
  <div class="container mt-5">
    <h1>Login</h1>

    <div class="row">
      <div class="col-sm-8">
        <div class="card">
          <div class="card-body">

            <!-- Makes POST request to /login route -->
            <form action="/login" method="POST">
              <div class="form-group">
                <label for="email">Email</label>
                <input type="email" class="form-control" name="username">
              </div>
              <div class="form-group">
                <label for="password">Password</label>
                <input type="password" class="form-control" name="password">
              </div>
              <button type="submit" class="btn btn-dark">login</button> <br>
              <p>No account yet? <a href="register">Register</a> one now!</p>
            </form>

          </div>
        </div>
      </div>

      <div class="col-sm-4">
        <div class="card">
          <div class="card-body">
            <a class="btn btn-block" href="/auth/google" role="button">
              <i class="fab fa-google"></i> <br>
              Sign In with Google
            </a>
          </div>
        </div>
      </div>

    </div>
  </div>

  <%- include('partials/footer') %>